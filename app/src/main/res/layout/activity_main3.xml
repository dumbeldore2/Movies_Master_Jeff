<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:id="@+id/constraintLayout3"
    android:background="@drawable/animation_list">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/back_button_1"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:text="back"
            android:textSize="30dp"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add"
            android:textSize="64dp"
            android:fontFamily="@font/montserrat_alternates"
            android:textColor="@color/white"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:background="@drawable/background_add_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_2_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates"
                    android:gravity="center"
                    android:text="add movies"
                    android:textColor="@color/color2"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/text_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates"
                    android:gravity="center"
                    android:text="naam : "
                    android:textColor="@color/color1"
                    android:textSize="48dp"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/editText_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="naam?"
                    android:background="@drawable/button_off"
                    android:textSize="64dp"
                    android:textColor="@color/color2"
                    android:fontFamily="@font/montserrat_alternates"
                    android:maxHeight="100dp"
                    android:layout_marginBottom="15dp"
                    android:inputType="text"/>
                <TextView
                    android:id="@+id/text_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates"
                    android:gravity="center"
                    android:text="foto : "
                    android:textColor="@color/color1"
                    android:textSize="48dp"
                    android:layout_marginBottom="5dp"/>

                <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/ic_baseline_image_24"
                    android:background="@drawable/button_off"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/text_4"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Add"
                    android:fontFamily="@font/montserrat_alternates"
                    android:textSize="48dp"
                    android:background="@drawable/add_button_1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>